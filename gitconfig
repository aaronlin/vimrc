[user]
	name = aaronlin
	email = aaronlin@kkbox.com
[color]
	ui = true
[merge]
	tool = opendiff
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
    rt = reset --hard
    unstage = reset HEAD
    uncommit = reseet --soft HEAD^
    l = log --pretty=oneline --abbrev-commit --graph --decorate
    g = grep -n --color -E
    nb = checkout -b
    # 'git add -u' add only removed files
    # 'git add .' add only modified and added files
    # 'git addall' add both of above
    addall = !sh -c 'git add . && git add -u'
    merge = merge -e
    fetch = fetch -p
[push]
    # only push branches that have been
    # set up to track a remote branch.
    default = current
[core]
	editor = vim
