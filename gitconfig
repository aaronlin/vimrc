[user]
    name = aaronlin
    email = aaron.lin@appier.com
[color]
    ui = true
[merge]
    tool = opendiff
[diff]
    tool = icdiff
[difftool "icdiff"]
    cmd = icdiff $LOCAL $REMOTE
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    rt = reset --hard
    unstage = reset HEAD
    uncommit = reset --soft HEAD^
    l = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    g = grep -n --color -E
    nb = checkout -b
    amend = commit --amend
    who = shortlog -n -s --no-merges
    # 'git add -u' add only removed files
    # 'git add .' add only modified and added files
    # 'git addall' add both of above
    addall = !sh -c 'git add . && git add -u'
    merge = merge -e
    fetch = fetch -p
    pull = pull --prune
[push]
    # only push branches that have been
    # set up to track a remote branch.
    default = current
[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less
[core]
    editor = vim
	autocrlf = input
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	required = true
	clean = git-lfs clean -- %f
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
